<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <Button
        android:id="@+id/btnAcademic"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/rounded_white"

        android:fontFamily="@font/roboto_medium"
        android:text="Academic"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="50dp"
        android:drawableLeft="@drawable/ic_maths"
        android:drawableRight="@drawable/ic_arrow_next"
        android:paddingRight="30dp"

        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btnHobbies"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/ic_art"
        android:drawablePadding="-80dp"
        android:fontFamily="@font/roboto_medium"
        android:paddingLeft="50dp"
        android:text="Hobbies"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSports"
        android:drawableRight="@drawable/ic_arrow_next"
        android:paddingRight="30dp"/>

    <Button
        android:id="@+id/btnSports"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/ic_basketball"
        android:fontFamily="@font/roboto_medium"
        android:paddingLeft="50dp"
        android:text="Sports"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLanguages"
        android:drawableRight="@drawable/ic_arrow_next"
        android:paddingRight="30dp"
        />

    <Button
        android:id="@+id/btnLanguages"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/ic_languages_3"
        android:drawablePadding="-80dp"
        android:fontFamily="@font/roboto_medium"
        android:paddingLeft="50dp"
        android:text="Languages"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAcademic"
        android:drawableRight="@drawable/ic_arrow_next"
        android:paddingRight="30dp"/>

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/tvEduType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/cabin_medium"
        android:text="Learn"
        android:textColor="@color/DimGray"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>