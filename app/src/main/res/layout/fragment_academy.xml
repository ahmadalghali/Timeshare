<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue"
    android:id="@+id/academyFragmentLayout"
    tools:context=".fragment.academy.AcademyFragment"

    >

<!--        android:background="@drawable/app_background"
-->

    <Button
        android:id="@+id/learnBtn"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_marginTop="216dp"
        style="?borderlessButtonStyle"
        android:background="@drawable/rounded_white_flat_left"
        android:fontFamily="@font/roboto_bold"
        android:text="Learn"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teachBtn"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_white_flat_right"
        android:fontFamily="@font/roboto_bold"
        android:text="Teach"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

</androidx.constraintlayout.widget.ConstraintLayout>